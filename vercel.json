{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python"
    },
    "backend/*.py": {
      "runtime": "@vercel/python"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}